[Unit]
Description=CUBEBOT Uwsgi
Requires=nginx.service
After=nginx.service
[Service]
ExecStart=/usr/bin/uwsgi -H /opt/cube/CubingAtHomeBot/environments/cube -i /opt/cube/CubingAtHomeBot/cube.ini --need-app --logto /var/log/cube.log
ExecStop=/bin/kill $MAINPID
KillMode=process
Restart=always
User=1001
WorkingDirectory=/opt/cube/CubingAtHomeBot
[Install]
WantedBy=multi-user.target
